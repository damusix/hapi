{
    "compilerOptions": {
        "module": "commonjs",
        "lib": [
            "ESNext"
        ],
        "noImplicitAny": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "noEmit": true,
        "forceConsistentCasingInFileNames": true,
        "paths": {
            "@hapi/hapi": [
                "../.."
            ]
        },
    },
    "include": [
        "./factory/*.ts",
        "./request/*.ts",
        "./response/*.ts",
        "./route/*.ts",
        "./server/*.ts",
    ]
}